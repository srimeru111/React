export default IssueTracker;


//IssueList.js (Stateless component)
import React from "react";
function IssueList({Issue}){
return(
<ul> {
 Issue.map((item)=> ( <li key={item.id}>{item.title}) ></li>
))}
</ul>
};
export default IssueList;


//App.js
